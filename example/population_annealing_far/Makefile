CXX = g++
CFLAGS = -Wall -Wextra -std=c++11 -O3 -g -c -I../../include -o $@
LFLAGS = -Wall
PTHREAD = -pthread -lrt
LDL = -ldl
METIS = -L/usr/local/lib -lmetis
CARGO = -L../../lib -lcargo

OBJS = population_annealing_far.o

all: $(OBJS)
	$(CXX) $(LFLAGS) $(OBJS) $(CARGO) $(PTHREAD) $(METIS) $(LDL) -o population_annealing_far

population_annealing_far.o: ../../lib/libcargo.a population_annealing_far.h population_annealing_far.cpp
	$(CXX) $(CFLAGS) population_annealing_far.cpp

clean:
	rm *.o population_annealing_far
